{
    "description": "Advanced Bookmark handling.",
    "manifest_version": 2,
    "name": "Bookie",
    "version": "0.1",
    "author": "Robin Daniels aka dark982",
    
    "developer": {
        "name": "Robin Daniels aka dark982",
        "url": "https://github.com/dark982/bookie"
    },

    "incognito": "not_allowed",
    
    
    
    "icons": {
        "48": "assets/icons/border-48.png"
    },
    
    "permissions": [
        "bookmarks",
        "<all_urls>"
    ],

    "web_accessible_resources": [

        "templates/test.mst"
    ],
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

    "browser_action": {
        "default_popup": "html/popup/bookie_toolbar.html",
        "default_icon": {
            "16": "assets/icons/page-16.png",
            "32": "assets/icons/page-32.png"
        }
    }
}